<Window x:Class="ConvexHull.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Canvas Name="LayoutRoot">
        <Canvas Name="GraphCanvas" Canvas.Left="10" Canvas.Top="20" Height="200" Width="200" Background="Aqua" ></Canvas>
        <Button Canvas.Left="12" Canvas.Top="236" Content="Find Hull" Height="23" Name="FindHull" Width="83" Click="findHullButton_Click" />
        <TextBox Canvas.Left="230" Canvas.Top="20" Height="55" Name="Status" Width="261" />
        <Button Canvas.Left="15" Canvas.Top="268" Content="Clear" Height="23" Name="button2" Width="75" Click="clearButton_Click" />
        <Label Canvas.Left="238" Canvas.Top="145" Content="1) Create a set of points by clicking on the blue area.

2) Find the convex hull with the Find Hull button.
               
3) Clear points and hull with clear button and try again if you want.
               classified " Height="146" Width="244" Opacity="0.5"/>
    </Canvas>
</Window>
